---
import Header from "../components/Header/Header.astro";
import Footer from "../components/Footer/Footer.astro";
import type { PageMetadata } from "../interfaces/pagesList";

const { title, description } = Astro.props as PageMetadata;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta charset="UTF-8" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <div id="main-container">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<script>
  // Add a paddin top in <slot> depending on the height of the <Header />, to prevent the <Header /> from covering it
  import "./handleWindowResize";
</script>
