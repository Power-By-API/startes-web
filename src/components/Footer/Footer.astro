import ButtonsList from "../Buttons/ButtonsList.astro";
import PrimaryButton from "../Buttons/PrimaryButton.astro";
import SecondaryButton from "../Buttons/SecondaryButton.astro";
---

<!-- TODO: cambiar los enlaces port el links a las página que hagamos -->
<footer class="px-10">
  <div class="max-w-screen-xl mx-auto px-4 text-[--text-color-primary] md:px-8">
    <div
      class="space-y-6 sm:max-w-lg sm:mx-auto sm:text-center text-[--text-color-secondary]"
    >
      <!-- TODO: Añadir logo bueno de Startes. Hay que hacer uno nuevo particiendo del original. -->
      <!-- TODO: Responsive del icono (hacer más pequeño o a la izq del texto) -->
      <img
        src="https://cdn-icons-png.flaticon.com/512/9908/9908191.png"
        class="w-32 sm:mx-auto"
      />
      <p>Obtén un presupuesto para tu instalación de placas solares</p>
      <ButtonsList>
        <PrimaryButton>
          <a href=""> Ir a la calculadora solar </a>
        </PrimaryButton>
        <SecondaryButton>
          <a href="" class="flex items-center md:inline-flex gap-2">
            <!-- TODO: ¿Cambiar a boton con fondo blanco? -->
            Contacta con nosotros
            <!-- TODO: Cambiar por biblioteca de componentes de iconos -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="w-5 h-5"
            >
              <path
