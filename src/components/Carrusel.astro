      <!-- Diapositiva 3 -->
      <div class="w-full flex-shrink-0 flex items-center justify-center bg-lime-200">
        <h2 class="text-2xl">Diapositiva 3</h2>
      </div>
      <!-- Diapositiva 4 -->
      <div class="w-full flex-shrink-0 flex items-center justify-center bg-lime-200">
        <h2 class="text-2xl">Diapositiva 4</h2>
      </div>
    </div>
  
    <!-- Controles del carrusel -->
    <button id="prev" class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-2">Prev</button>
    <button id="next" class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-2">Next</button>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const carousel = document.getElementById('carousel')!;
      const prevButton = document.getElementById('prev')!;
      const nextButton = document.getElementById('next')!;
  
      if (carousel && prevButton && nextButton) {
        const slides = carousel.children;
        let currentIndex = 0;
  
        function updateCarousel() {
          carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
        }
  
        prevButton.addEventListener('click', () => {
          currentIndex = (currentIndex > 0) ? currentIndex - 1 : slides.length - 1;
          updateCarousel();
        });
  
        nextButton.addEventListener('click', () => {
          currentIndex = (currentIndex < slides.length - 1) ? currentIndex + 1 : 0;
          updateCarousel();
        });
      } else {
        console.error('Carousel elements not found');
      }
    });
  </script>