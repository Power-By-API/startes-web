    <!-- Contenedor de las diapositivas -->
    <div id="carousel" class="flex transition-transform duration-300 ease-in-out h-full">
      <!-- Diapositiva 1 -->
      <div class="w-full flex-shrink-0 flex items-center justify-center bg-lime-200">
